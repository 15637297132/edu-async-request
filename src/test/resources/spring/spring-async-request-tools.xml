<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd ">

	<context:annotation-config/>
	<context:component-scan base-package="com.p7.framework.async.request.common.service"/>

	<bean id="asyncRequestExecutor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<!-- 线程池维护线程的最少数量 -->
		<property name="corePoolSize" value="2" />
		<!-- 允许的空闲时间 -->
		<property name="keepAliveSeconds" value="200" />
		<!-- 线程池维护线程的最大数量 -->
		<property name="maxPoolSize" value="4" />
		<!-- 缓存队列 -->
		<property name="queueCapacity" value="20" />
		<!-- 线程名前缀 -->
		<property name="threadNamePrefix" value="async-request"/>
		<!-- 对拒绝task的处理策略 -->
		<property name="rejectedExecutionHandler">
			<bean class="java.util.concurrent.ThreadPoolExecutor$CallerRunsPolicy" />
		</property>
	</bean>

	<bean id="requestProcessorThreadPool"
		class="com.p7.framework.async.request.common.thread.RequestProcessorThreadPool"
		init-method="init" scope="singleton"  lazy-init="false">
		<property name="threadPool" ref="asyncRequestExecutor" />
		<property name="queueNum" value="2" />
		<property name="perQueueSize" value="5000" />
	</bean>
	
</beans>